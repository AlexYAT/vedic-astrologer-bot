# Telegram Bot Token (получить через @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (получить на platform.openai.com)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Assistant ID (fallback, если не заданы FREE/PRO)
ASSISTANT_ID=your_assistant_id_here

# Режимы FREE и PRO: разные ассистенты (создать в platform.openai.com)
ASSISTANT_ID_FREE=asst_xxxx_free
ASSISTANT_ID_PRO=asst_xxxx_pro

# Видимость кнопки «Режим FREE/PRO»: public — всем, testers — только из MODE_SWITCH_USERS, off — скрыть
MODE_SWITCH_VISIBILITY=public

# Список telegram_id для режима testers (через запятую). При testers кнопку видят только они
# MODE_SWITCH_USERS=5144572003,123456789
MODE_SWITCH_USERS=

# Режим отладки: 1 — детальные INFO-логи в файл/консоль (не показывает debug пользователю)
# DEBUG_MODE=0 — отключить
DEBUG_MODE=0

# Показывать debug-строку в ответе только пользователям из DEBUG_USERS (0 — никому, 1 — тестерам)
DEBUG_SHOW_TO_USERS=0

# Список telegram_id, которым можно показывать debug при DEBUG_SHOW_TO_USERS=1 (через запятую)
# DEBUG_USERS=5144572003,123456789
DEBUG_USERS=

# Часовой пояс для «текущей даты» в ответах ассистента (IANA, напр. Asia/Novosibirsk). По умолчанию Asia/Novosibirsk
TZ_NAME=Asia/Novosibirsk
